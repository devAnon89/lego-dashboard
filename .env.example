# Automated Data Scraping Pipeline Configuration
# Copy this file to .env and configure for your environment

# ==========================
# Scheduling Configuration
# ==========================
# Cron schedule for automated scraping (default: daily at 6am)
# Format: minute hour day month weekday
# Examples:
#   0 6 * * *     - Daily at 6:00 AM
#   0 */12 * * *  - Every 12 hours
#   0 6 * * 1     - Every Monday at 6:00 AM
SCRAPE_SCHEDULE=0 6 * * *

# ==========================
# Browser Configuration
# ==========================
# Run Puppeteer in headless mode (true/false)
# Set to false for debugging to see browser window
HEADLESS_MODE=true

# Browser viewport width (pixels)
VIEWPORT_WIDTH=1920

# Browser viewport height (pixels)
VIEWPORT_HEIGHT=1080

# ==========================
# Scraping Behavior
# ==========================
# Maximum number of retry attempts for failed scrapes
MAX_RETRIES=3

# Delay between retries (milliseconds)
RETRY_DELAY=2000

# Delay between page navigations to avoid rate limiting (milliseconds)
PAGE_DELAY=1000

# Delay between scraping different data sources (milliseconds)
SOURCE_DELAY=3000

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# ==========================
# Logging Configuration
# ==========================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable file logging in addition to console (true/false)
LOG_TO_FILE=true

# Log file path (relative to project root)
LOG_FILE_PATH=./data/scraper-logs.json

# ==========================
# Data Sources
# ==========================
# Enable/disable specific scrapers (true/false)
ENABLE_BRICKECONOMY=true
ENABLE_EBAY=true
ENABLE_BRICKLINK=false

# eBay domains to scrape (comma-separated)
# Will try in order until successful
EBAY_DOMAINS=ebay.de,ebay.fr,ebay.it,ebay.es

# ==========================
# Performance & Safety
# ==========================
# Maximum concurrent browser pages
MAX_CONCURRENT_PAGES=1

# Enable stealth mode to avoid bot detection (true/false)
STEALTH_MODE=true

# User agent override (leave empty to use default)
USER_AGENT=
