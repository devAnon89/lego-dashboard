{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": "off",
    "no-debugger": "warn"
  },
  "overrides": [
    {
      "files": [
        "lego-cli.js",
        "deep-analysis.js",
        "scripts/**/*.js"
      ],
      "parserOptions": {
        "sourceType": "script"
      },
      "env": {
        "commonjs": true,
        "node": true,
        "browser": false
      }
    },
    {
      "files": [
        "src/**/*.js"
      ],
      "env": {
        "browser": true,
        "es2021": true,
        "node": false
      }
    }
  ]
}
